<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallCenterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarcallcenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_below="@id/toolbarcallcenter"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Pilih Salah Satu Calal Center Kami" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/btnc4"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@+id/btnc3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Call Center 4"
        android:background="@drawable/login_button_bg"/>

    <Button
        android:id="@+id/btnc2"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@+id/btnc1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Call Center 2"
        android:background="@drawable/login_button_bg"/>

    <Button
        android:id="@+id/btnc3"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@+id/btnc2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Call Center 3"
        android:background="@drawable/login_button_bg"/>


    <Button
        android:id="@+id/btnc1"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Call Center 1"
        android:background="@drawable/login_button_bg"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9pt"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewMap"
                android:textAlignment="textEnd"
                android:text="Lihat Peta"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lat: "/>
                <TextView
                    android:id="@+id/labellatitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long: "/>
                <TextView
                    android:id="@+id/labellongitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerJenisLaporan"
                android:spinnerMode="dialog"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal">
            </Spinner>
            <Button
                android:id="@+id/imgLayananKesehatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tombolbulat"
                android:onClick="klikLayananKesehatan"
                android:text="PANIC"
                android:textSize="50dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/imgTelepon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_margin="10dp"
                    android:background="@drawable/login_button_bg"
                    android:text="Telepon"/>
                <Button
                    android:id="@+id/iImgWhatsapp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_margin="10dp"
                    android:background="@drawable/login_button_bg"
                    android:text="Whatsapp" />
            </LinearLayout>
        </LinearLayout >
    </ScrollView>
</LinearLayout>